<view class="zhp_index">
  <!-- 搜索框 开始 -->
  <SearchInput></SearchInput>
  <!-- 搜索框 结束-->
  <!-- 轮播图开始 -->
  <view class="index-swiper">
  <!-- 1.swiper和image标签存在默认的宽度和高度 -->
  <!-- 2.一、原图宽高750*340 
       二、让图片的高度自适应宽度
       三、让swiper标签的高度变成和图片一样的高度
       3.图片标签 mode属性：渲染模式
       widthFix 让图片的标签宽高和图片标签的内容的宽高都等比例的发生变化
  -->
    <swiper autoplay indicator-dots="true" circular>
    <swiper-item
     wx:for="{{swiperList}}"
     wx:key="goods_id"
    >
     <navigator url="/pages/goods_detail/index?goods_id={{item.goods_id}}">
       <image mode="scaleToFill" src="{{item.image_src}}" style="width:100%;height:340rpx;"></image>
     </navigator>
    </swiper-item>
    </swiper>
    <!-- 轮播图结束 -->
    <!-- 分类导航开始  -->
    <view class="index_cate">
       <navigator
        wx:for="{{cateList}}"
        wx:key="name"
        url="/pages/category/index"
        open-type="switchTab"
       >
       <image mode="widthFix" src="{{item.image_src}}"></image>
       </navigator>
    </view>
  </view>
  <!-- 分类导航结束 -->
  <!-- 楼层开始 -->
  <view class="index_floor">
    <view class="floor_group"
      wx:for="{{floorList}}"
      wx:for-item="item1"
      wx:for-index="index1"
      wx:key="floor_title"
    >
    <!-- 标题 -->
      <view class="floor_title">
        <image mode="widthFix" src="{{item1.floor_title.image_src}}"></image>
      </view>
      <!-- 内容 -->
      <view class="floor_list">
         <navigator
           wx:for="{{item1.product_list}}"
           wx:for-item="item2"
           wx:for-index="index2"
           wx:key="name"
          url="{{item2.navigator_url}}"
         >  
         <image mode="{{index2===0?'widthFix':'scaleToFill'}}" src="{{item2.image_src}}"></image>
         </navigator>
      </view>
    </view>
  </view>
  <!-- 楼层结束 -->
</view>
  